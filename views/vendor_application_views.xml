<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Action to open vendor applications -->
    <record id="action_food_vendor_application" model="ir.actions.act_window">
        <field name="name">Vendor Applications</field>
        <field name="res_model">food.vendor.application</field>
        <field name="view_mode">kanban,tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first vendor application
            </p>
        </field>
    </record>

    <!-- Kanban view grouping by state -->
    <record id="view_food_vendor_application_kanban" model="ir.ui.view">
        <field name="name">food.vendor.application.kanban</field>
        <field name="model">food.vendor.application</field>
        <field name="arch" type="xml">
            <kanban default_group_by="state" class="o_kanban_small_column">
                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_card">
                            <div class="o_kanban_content">
                                <strong><field name="name"/></strong>
                                <div><field name="partner_id"/></div>
                                <div><field name="event_id"/></div>
                                <div><field name="booth_id"/></div>
                                <div><field name="state" widget="statusbar"/></div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Tree view -->
    <record id="view_food_vendor_application_tree" model="ir.ui.view">
        <field name="name">food.vendor.application.tree</field>
        <field name="model">food.vendor.application</field>
        <field name="arch" type="xml">
            <tree string="Vendor Applications">
                <field name="name"/>
                <field name="partner_id"/>
                <field name="event_id"/>
                <field name="booth_id"/>
                <field name="state"/>
            </tree>
        </field>
    </record>

    <!-- Form view with tabs -->
    <record id="view_food_vendor_application_form" model="ir.ui.view">
        <field name="name">food.vendor.application.form</field>
        <field name="model">food.vendor.application</field>
        <field name="arch" type="xml">
            <form string="Vendor Application" create="false">
                <sheet>
                    <header>
                        <field name="state" widget="statusbar" statusbar_visible="new,review,approved,contract_sent,signed,invoiced,checked_in,closed,rejected"/>
                    </header>
                    <notebook>
                        <page string="Overview">
                            <group col="4" name="company">
                                <field name="name" readonly="1"/>
                                <field name="partner_id" options="{'no_create': True}"/>
                                <field name="company_name_fallback" attrs="{'invisible': [('partner_id','!=',False)]}"/>
                                <field name="vat_fallback" attrs="{'invisible': [('partner_id','!=',False)]}"/>
                                <field name="phone_fallback" attrs="{'invisible': [('partner_id','!=',False)]}"/>
                                <field name="email_fallback" attrs="{'invisible': [('partner_id','!=',False)]}"/>
                            </group>
                            <group col="4" name="event">
                                <field name="event_id"/>
                                <field name="day_ids" widget="many2many_tags" options="{'no_create': True}"/>
                                <field name="booth_id" readonly="1"/>
                            </group>
                        </page>
                        <page string="Documents">
                            <field name="message_follower_ids" widget="mail_followers"/>
                            <field name="message_ids" widget="mail_thread"/>
                        </page>
                        <page string="Utilities">
                            <group col="4">
                                <field name="truck_width"/>
                                <field name="truck_depth"/>
                                <field name="needs_power_kw"/>
                                <field name="needs_water"/>
                                <field name="needs_sewage"/>
                            </group>
                        </page>
                        <page string="Pricing">
                            <group col="4">
                                <field name="pricing_package"/>
                                <field name="computed_subtotal" readonly="1"/>
                                <field name="taxes" readonly="1"/>
                                <field name="computed_total" readonly="1"/>
                            </group>
                            <field name="service_line_ids">
                                <tree editable="bottom">
                                    <field name="product_id"/>
                                    <field name="qty"/>
                                    <field name="price_unit"/>
                                    <field name="subtotal" readonly="1"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Communication">
                            <field name="message_ids" widget="mail_thread"/>
                        </page>
                        <page string="History">
                            <field name="activity_ids"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Search view for vendor applications -->
    <record id="view_food_vendor_application_search" model="ir.ui.view">
        <field name="name">food.vendor.application.search</field>
        <field name="model">food.vendor.application</field>
        <field name="arch" type="xml">
            <search string="Vendor Applications">
                <field name="name"/>
                <field name="partner_id"/>
                <field name="event_id"/>
                <field name="state"/>
                <filter name="missing_booth" string="No Booth" domain="['|',('booth_id','=',False),('booth_id','!=',False)]"/>
            </search>
        </field>
    </record>
</odoo>