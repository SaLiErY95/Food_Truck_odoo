<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!--
        Security groups for the Food Truck Festival module.  These
        groups control access to menus, actions and record rules.
        Organiser: full access to all festival data.
        Vendor Coord: can review applications and assign booths but
        cannot modify accounting settings.
        Logistics: can view booths and mark checkâ€‘in only.
        Cashier: accounting privileges limited to customers in this
        module.
        Portal Vendor: limited portal access to own records.
    -->
    <record id="group_food_organiser" model="res.groups">
        <field name="name">Food Festival Organiser</field>
        <field name="category_id" ref="base.module_category_sales_management"/>
        <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
    </record>

    <record id="group_food_coordinator" model="res.groups">
        <field name="name">Food Festival Coordinator</field>
        <field name="category_id" ref="base.module_category_sales_management"/>
        <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
    </record>

    <record id="group_food_logistics" model="res.groups">
        <field name="name">Food Festival Logistics</field>
        <field name="category_id" ref="base.module_category_sales_management"/>
        <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
    </record>

    <record id="group_food_cashier" model="res.groups">
        <field name="name">Food Festival Cashier</field>
        <field name="category_id" ref="base.module_category_sales_management"/>
        <field name="implied_ids" eval="[(4, ref('base.group_user')), (4, ref('account.group_account_invoice'))]"/>
    </record>

    <record id="group_food_portal_vendor" model="res.groups">
        <field name="name">Food Festival Vendor Portal</field>
        <field name="category_id" ref="base.module_category_portal"/>
        <field name="implied_ids" eval="[(4, ref('portal.group_portal'))]"/>
    </record>
</odoo>